---
import type {CollectionEntry} from 'astro:content';
import Movie from './Movie.astro';
type Props = {
    movies: CollectionEntry<'movies'>[];
}

const {movies} = Astro.props;
---

<div class="grid grid-cols-2 gap-x-16 gap-y-14 max-md:grid-cols-1 mb-24">
    {movies.map((movie) =>
            <Movie movie={movie}/>)}
</div>