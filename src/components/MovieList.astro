---
import type {CollectionEntry} from 'astro:content';
import Movie from './Movie.astro';
type Props = {
    movies: CollectionEntry<'movies'>[];
}

const {movies} = Astro.props;
---

<div class="grid grid-cols-2 gap-4 max-md:grid-cols-1 lg:grid-cols-3 2xl:grid-cols-4 py-10">
    {movies.map((movie) =>
            <Movie movie={movie}/>)}
</div>