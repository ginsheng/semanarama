---
import {type CollectionEntry} from 'astro:content';
import {Image} from 'astro:assets';

type Props = {
    movie: CollectionEntry<'movies'>;
};

const {movie} = Astro.props;
const formattedDate = new Date(movie.data.date).toLocaleDateString('es-MX', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
});
---

<article>
    <a href={`/movies/${movie.slug}`}>
        <Image
                src={movie.data.image}
                width={600}
                height={600 / 1.5}
                alt={movie.data.title}
                class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover"
        />
    </a>
    <!--<span class="font-semibold">({formattedDate})</span>-->
    <a href={`/movies/${movie.slug}`}>
        <h2 class="text-2xl text-amber-500 font-semibold inline-block">{movie.data.title}</h2>
        <p class="text-amber-600 text-xl line-clamp-2">
            {movie.data.slogan}
        </p>
    </a>
</article>